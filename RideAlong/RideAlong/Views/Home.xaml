<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideAlong.Home"
             Title="Home">
  <Grid>
    <StackLayout>
      <Label Margin="10" x:Name="lblUserName" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
      <Label Margin="10" x:Name="lblUserRating" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
      <Button Margin="10" x:Name="btnFind" Text="Find a Ride" />
      <Button Margin="10" x:Name="btnSet" Text="Set a Ride" />
      <Button Margin="10" x:Name="btnMyRides" Text="My Rides" />
    </StackLayout>
  </Grid>
</ContentPage>